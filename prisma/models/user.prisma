model User {
  id               String    @unique @default(uuid())
  userName         String?
  email            String    @unique
  password         String
  role             userRole  @default(USER)
  name             String?
  images           String?
  location         String?
  bio              String?
  phoneNo          String?
  provider         String?
  providerId       String?
  resetToken       String?
  socialProfile    String?
  resetTokenExpiry DateTime?
  isPopular        Boolean?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  planId           String?

  plan             Plan?     @relation("UserPlan", fields: [planId], references: [id])
  blogs            Blog[]
  Brand            Brand?
  payments Payment[]
  comments         Comment[]
  likes            Like[]
  views            View[]
  event            event[]
}

enum userRole {
  USER
  ADMIN
  SUPER_ADMIN
  HOST
}
