model Plan {
  id          String   @id @default(uuid())
  // name        String
  type        PlanType
  description String?
  price       Float
  duration    Int
  features    String[]
  isActive    Boolean  @default(true)
  stripeProductId String?
  stripePriceId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  User        User[]   @relation("UserPlan")
}

enum PlanType {
  STARTER
  GROWTH
  ENTERPRISE
}
